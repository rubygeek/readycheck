<h1>Roster</h1>

<table border="1">
  <tr>
    <th>Name</th>
    <th>Level</th>
    <th>Primary Spec</th>
    <th>Secondary Spec</th>
  </tr>

<% @characters.each do |character| %>
  <tr>
    <td><%=h character.user.name%> (<%=h character.character_name %>)</td>
    <td><%=h character.character_level %></td>
    <td><%=h character.character_spec_1_name %> / <%=h character.character_spec_1_utility %></td>
    <td><%=h character.character_spec_2_name %> / <%=h character.character_spec_2_utility %></td>
    <td><%= link_to 'Details', character %></td>
    <td><%= link_to 'Edit', edit_character_path(character) %></td>
    <td><%= link_to 'Delete', character, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Add New character', new_character_path %>